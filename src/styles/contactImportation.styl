@require 'settings/palette.styl'

.importation-section
    margin 0
    margin-bottom 24px
    line-height 1.5
    color charcoalGrey

.importation-step-list
    padding-left 1.75rem

.importation-step
    padding-left .5rem

.importation-card
    display flex
    flex-direction column
    align-items stretch
    margin 0 48px
    width 384px
    border-radius 4px
    border 1px dashed silver
    padding-bottom 24px

.importation-file
    display flex
    flex-direction column
    align-items stretch

.importation-file-icon,
.importation-message,
.importation-file,
.importation-file-name,
.importation-file-selection-button,
.importation-status
    margin 0 auto

.importation-file-icon
    width 101px
    height 86px
    margin-top 16px
    // Compensate sticking out background card on the right
    padding-left 22px

.importation-message,
.importation-file-name
    margin-top 8px

.importation-file-name
    // Compensate unselect button
    padding-left 28px

.importation-message
    height 24px

.importation-file-oval
    margin-left 8px
    width 20px
    height 20px
    background-color white
    border solid 1px silver
    border-radius 50%
    padding 0
    color coolGrey

.importation-file-oval:hover
    background-color paleGrey
    cursor pointer

.importation-file-cross
    width 8px
    height 8px
    object-fit contain

.importation-file-selection-button,
.importation-status
    margin 24px 0 0 0 !important // FIXME
    position relative
    overflow hidden
    font-weight bold
    border 0

.importation-status
    font-size 14px
    text-transform uppercase
    text-align center
    color coolGrey
    padding .2rem 1rem

.importation-file-selection-input
    position absolute
    top 0
    left 0
    opacity 0
    width 100%
    height 100%
    z-index 1

.importation-file-selection-icon
    display block

.importation-file-selection-button,
.importation-file-selection-icon
    color coolGrey

.importation-card-clickable:hover
    &,
    .importation-file-selection-button,
    .importation-file-selection-button:hover,
    .importation-file-selection-icon
        background-color paleGrey
        cursor pointer

.importation-actions
    display flex
    flex-direction row
    justify-content flex-end

.importation-error
    .importation-card
        border-color pomegranate
        &,
        .importation-file-selection-button,
        .importation-file-selection-button:hover,
        .importation-file-selection-icon
            background-color chablis

    .importation-file-name,
    .importation-message
        color pomegranate
