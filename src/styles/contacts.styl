@require 'settings/palette.styl'
@require 'components/table.styl'

main > [role=main]
    width 100%
    max-width 80rem
    margin 0 auto

[role=banner] .coz-bar-container
    +small-screen()
        align-items center

.list-wrapper
    box-shadow 0 4px 4px 0 silver

.topbar
    display flex
    flex-shrink 0
    max-width 80rem
    width 100%
    margin 1rem auto

    +small-screen()
        flex-direction column

    &__left
        display flex
        flex 1 1 auto
        justify-content center
        align-items center
        padding-right 1rem

        +small-screen()
            flex-direction column
            padding-right 0
            margin-bottom 1rem

    &__right
        display flex
        justify-content center
        align-items center

.actions
    display flex

.contact-selection
    position absolute

.contact-identity
    flex-basis 30%
    padding-left 2rem

    +small-screen()
        flex 1 1 auto

.contact-myself
    color coolGrey
    padding-left .5rem

.contact-phone
    flex 0 0 12rem

.contact-cozyurl
    flex 0 0 12rem

.contact-email
    flex-basis 30%

// TODO: Find a better way to set the .empty icon size
.contacts-empty>svg
    height 300px
    width 280px

.categorized-list-wrapper
    display flex
    flex-direction row
    .header-navigator
        position sticky
        top 0
        align-self flex-start

.header-navigator
    list-style-type none
    li
        margin-top .2rem
        text-align center
        cursor pointer
        color darkgray
