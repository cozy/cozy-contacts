@require 'settings/palette.styl'

.contact-form
    height 50%
    display flex
    flex-direction column
    justify-content flex-start
    align-items stretch
    overflow hidden

.contact-form__fields
    height 50%
    flex-shrink 1
    overflow auto

.contact-form__footer
    height 4.5rem
    display flex
    justify-content flex-end
    align-items center

.contact-form__field
    display flex
    justify-content space-between
    align-items baseline
    max-width 75%
    margin .5rem auto

.contact-form__inputs-wrapper
    width 70%

.contact-form__label
    position relative
    width 30%
    padding-right .5rem
    padding-left 2rem
    font-size .75rem
    text-transform uppercase
    color coolGrey

.contact-form__icon
    position absolute
    left 0

.contact-form__meta-wrapper
    position relative

.contact-form__meta-button
    display flex
    justify-content center
    align-items center
    position absolute
    left 100%
    top 25%
    width 1.2rem
    height 1.2rem
    padding 0 0.2rem
    border 0
    border-radius 50%
    cursor pointer
    transition all .2s ease-out

    &:focus
        outline 0

.contact-form__meta-button--add
    margin-left 3rem
    background dodgerBlue

.contact-form__meta-button--remove
    margin-left 1rem
    background none
    border 1px solid silver
    opacity 1

.contact-form__meta-wrapper:hover .contact-form__meta-button--remove,
.contact-form__input-wrapper--focused ~ .contact-form__meta-button--remove
    opacity 1

.contact-form__input-wrapper
    display inline-flex
    width 100%
    margin-bottom .5rem

.contact-form__input,
.contact-form__label-input
    padding .5rem 1rem
    border 1px solid silver
    width 0
    flex-grow 1
    line-height 1.4

    &:focus
        border .0625rem solid dodgerBlue
        outline 0

    &::placeholder
        color coolGrey
        font-size 1rem

.contact-form__label-input
    margin-left .5rem

