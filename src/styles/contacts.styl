@require 'settings/palette.styl'

.contact
    display flex
    height 3rem
    box-shadow 0 1px 0 0 silver
    padding-left 2rem
    align-items center
    line-height 1.5rem

    &\-name
        flex 1 0 10rem

        &\-lastname
            font-weight bold
    
    &\-phone
        flex 1 0 6rem
        color coolGrey
        
    &\-email
        flex 1 0 6rem
        color coolGrey

    &\-badge
        flex 0 0 auto
        width 2rem
        height 2rem
        line-height 2rem
        border-radius 50%
        text-align center
        margin-right 1rem


.contact-header
    font-size .75rem
    height 1rem
    line-height 1.33rem
    font-weight bold
    color coolGrey
    background-color paleGrey
    padding-left 2rem
    