@require 'components/table.styl'

main
    max-width 75rem
    margin 0 auto

[role=banner] .coz-bar-container
    +small-screen()
        align-items center

.list-wrapper
    box-shadow 0 4px 4px 0 var(--borderMainColor)

.topbar
    display flex
    margin 1rem 0

    +small-screen()
        flex-direction column

    +large-screen()
        margin 1rem

    &__left
        display flex
        flex 1 1 auto
        justify-content center
        align-items center
        padding-right 1rem

        +small-screen()
            flex-direction column
            padding-right 0
            margin-bottom 1rem

    &__right
        display flex
        justify-content center
        align-items center

.actions
    display flex

// TODO: Find a better way to set the .empty icon size
.contacts-empty
    &>svg
        height 300px
        width 280px
