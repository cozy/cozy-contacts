@require 'settings/palette.styl'
@require 'components/table.styl'

main > [role=main]
    width 100%
    max-width 80rem
    margin 0 auto

[role=banner] .coz-bar-container
    +small-screen()
        align-items center

.directory
    line-height: 1
    list-style: none
    margin: 0 0 1em
    clear: both

ul.directory li.viewContent.selected
    border-bottom: 3px solid var(--regularButtonPrimaryColor)

ul.directory li.viewContent
    float: left
    border-bottom: 3px solid #f5f6f7

ul.directory li.viewContent.selected a span.title
    color: #32363f
    font-weight: 600

ul.directory li.viewContent a span.title
    color: var(--regularButtonPrimaryColor)
    font-size: .85em
    max-width: none
    font-weight: 500
    text-transform: uppercase

ul.directory li.viewContent a 
    padding-right: 10px

ul.directory li.viewContent a
    padding: .5em 1em
    display: block

ul.directory li a
    text-decoration: none
    color: #4477a1
    cursor: pointer

.list-wrapper
    box-shadow 0 4px 4px 0 silver
    display: flex
    flex-direction: column
    overflow: auto

 .list-wrapper .contact-list
    overflow: scroll

.topbar
    display flex
    flex-shrink 0
    max-width 80rem
    width 100%
    margin 1rem auto

    +small-screen()
        flex-direction column

    &__left
        display flex
        flex 1 1 auto
        justify-content center
        align-items center
        padding-right 1rem

        +small-screen()
            flex-direction column
            padding-right 0
            margin-bottom 1rem

    &__right
        display flex
        justify-content center
        align-items center

.actions
    display flex

.contact-selection
    position absolute

.contact-identity
    flex-basis 30%
    padding-left 2rem

    +small-screen()
        flex 1 1 auto

.contact-myself
    color coolGrey
    padding-left .5rem

.contact-phone
    flex 0 0 12rem

.contact-cozyurl
    flex 0 0 12rem

.contact-email
    flex-basis 30%

// TODO: Find a better way to set the .empty icon size
.contacts-empty>svg
    height 300px
    width 280px
