@require 'settings/palette.styl'
@require 'components/table.styl'

main > [role=main]
    width 100%
    max-width 80rem
    margin 0 auto

[role=banner] .coz-bar-container
    +small-screen()
        align-items center

.list-content-wrapper
    height 100%
    display flex
    gap 24px

.list-wrapper
    box-shadow 0 4px 4px 0 silver
    flex 1 0 auto
    overflow-y auto

.list-speed-dial
    display flex
    flex-direction column
    gap 12px
    overflow-y auto

.list-speed-dial::-webkit-scrollbar
    display none

.list-speed-dial-item > button
    cursor pointer
    text-transform uppercase
    width 2.2rem
    height 2.2rem
    background #f4f5f6
    border-radius 50%
    border none

.list-speed-dial-item > button:hover
    background lightgray

.topbar
    display flex
    flex-shrink 0
    max-width 80rem
    width 100%
    margin 1rem auto

    +small-screen()
        flex-direction column

    &__left
        display flex
        flex 1 1 auto
        justify-content center
        align-items center
        padding-right 1rem

        +small-screen()
            flex-direction column
            padding-right 0
            margin-bottom 1rem

    &__right
        display flex
        justify-content center
        align-items center

.actions
    display flex

// TODO: Find a better way to set the .empty icon size
.contacts-empty
    +small-screen()
        margin-top: calc(50vh - 6rem)
        transform: translateY(-50%)
    &>svg
        height 300px
        width 280px
