@require 'settings/palette.styl'
@require 'components/table.styl'

// @stylint off
.fix-c-btn svg
    margin-right 0 !important // hack https://github.com/cozy/cozy-ui/issues/338
// @stylint on

.list-wrapper
    width 100%
    max-width 80rem
    margin auto
    box-shadow 0 4px 4px 0 silver

.topbar
    width 100%
    max-width 80rem
    margin .75rem auto

$reset-list
    list-style none
    padding-left 0
    margin 0

.list-contact
    @extend $table
    @extend $reset-list

.sublist-contact
    @extend $reset-list

    :last-child
        .contact
            border 0

.contact
    @extend $table-row
    color coolGrey
    cursor pointer

    +small-screen()
        flex-direction column
        align-items flex-start
        height auto

.contact-selection
    position absolute
    left .5rem

.contact-identity
    @extend $table-cell
    @extend $table-cell--primary
    display inline-flex
    align-items center
    flex-basis 30%
    padding-left 2rem

.contact-firstname
    margin-left 1rem

.contact-lastname
    font-weight bold

.contact-phone
    @extend $table-cell
    flex 0 0 12rem

.contact-email
    @extend $table-cell
    flex-basis 30%

+small-screen()
    .contact-identity
    .contact-phone
    .contact-email
        flex-basis auto
        padding .3rem 1rem

.divider
    @extend $table-divider

.menu__item--danger
    color pomegranate
