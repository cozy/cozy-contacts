@require 'settings/palette.styl'
@require 'components/table.styl'

.contact
    width 100%
    max-width 80rem
    margin auto

.contact-content
    @extend $table
    box-shadow: 0 4px 4px 0 silver;

.contact-item
    @extend $table-row
    color coolGrey

    +small-screen()
        flex-direction column
        align-items flex-start
        height auto

.name
    @extend $table-cell
    @extend $table-cell--primary
    display inline-flex
    align-items center
    flex-basis 30%
    padding-left 2rem

.name-firstname
    margin-left 1rem

.name-lastname
    font-weight bold

.phone
    @extend $table-cell
    flex 0 0 12rem

.email
    @extend $table-cell
    flex-basis 30%

.name
.phone
.email
    +small-screen()
        flex-basis auto
        padding .3rem 1rem

.divider
    @extend $table-divider

