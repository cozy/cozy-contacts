@require 'settings/palette.styl'
@require 'components/table.styl'

.list-wrapper
    width 100%
    max-width 80rem
    margin 0 auto
    box-shadow 0 4px 4px 0 silver

.topbar
    width 100%
    max-width 80rem
    margin .75rem auto
    display flex
    flex 0 0 auto

    .topbar__left
        flex 1

.actions
    display flex

$reset-list
    list-style none
    padding-left 0
    margin 0

.list-contact
    @extend $table
    @extend $reset-list

.sublist-contact
    @extend $reset-list

    :last-child
        .contact
            border 0

.contact
    @extend $table-row
    color coolGrey
    cursor pointer

    +small-screen()
        height auto

.contact-selection
    position absolute
    left .5rem

    +small-screen()
        position relative

.contact-identity
    @extend $table-cell
    @extend $table-cell--primary
    display inline-flex
    align-items center
    flex-basis 30%
    padding-left 2rem

.contact-myself
    color coolGrey
    padding-left .5rem

.contact-phone
    @extend $table-cell
    flex 0 0 12rem

.contact-cozyurl
    @extend $table-cell
    flex 0 0 12rem

.contact-email
    @extend $table-cell
    flex-basis 30%

+small-screen()
    .contact-identity
    .contact-phone
    .contact-cozyurl
    .contact-email
        flex-basis auto
        padding .3rem 1rem

.divider
    @extend $table-divider

// TODO: Find a better way to set the .empty icon size
.contacts-empty>svg
    height 300px
    width 280px

.fil-path-title
    font-size 1.3rem
    height 3rem
    display flex
    align-items center
    padding 0 .25rem
