@require 'components/table.styl'

main
    max-width 75rem
    margin 0 auto
    background-color var(--paperBackgroundColor) !important // to override cozy-ui behavior

[role=banner] .coz-bar-container
    +small-screen()
        align-items center

.list-wrapper
    border-bottom 1px solid var(--borderMainColor)

.topbar
    display flex
    margin 1rem 0
    gap 1rem

    +small-screen()
        flex-direction column

    +large-screen()
        margin 1rem

    &__left
        display flex
        flex 1 1 67%
        justify-content center
        align-items center
        gap 1rem

        +small-screen()
            flex-direction column
            gap 0


    &__right
        display flex
        flex 1 1 33%
        justify-content center
        align-items center

        button
            // inputs in __left have maxWidth 32rem
            // we have here 2 buttons, so 16rem
            // but also a gap of 0.5rem, so 15.75rem
            max-width 15.75rem

// TODO: Find a better way to set the .empty icon size
.contacts-empty
    &>svg
        height 300px
        width 280px
